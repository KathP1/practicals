BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
            multiline: False
            size_hint_x: 0.8
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: 'Up'
                font_size: 25
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                font_size: 25
                on_press: app.handle_increment(-1)
