BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            font_size: 48
            multiline: False
            size_hint_x: 0.8
            on_text_validate: app.handle_update()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: 'Up'
                font_size: 25
            Button:
                text: 'Down'
                font_size: 25
    Button:
        text: 'Convert mi to km'
        font_size: 25
        on_press: app.handle_calculate(input_number.text)

    Label:
        text: app.message #this is what allows us to update the text in the widget
        font_size: 48
        color: (0.9, 0.8, 0, 1)
        id: output_label

