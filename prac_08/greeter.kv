BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Clear'
            on_press: app.handle_clear()
            size_hint_x: 0.3
            font_size: 20
            background_color: (1, 0, 0, 1)
        TextInput:
            id: input_name
            text: ''
            font_size: 20
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Greet'
            on_press: app.handle_greet()
            size_hint_x: 0.3
            font_size: 20

        Label:
            id: output_label
            color: (1, 1, 0, 1)
            text: 'Enter your name'
            font_size: 20